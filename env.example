# Discord Bot Token from https://discord.com/developers/applications
# Replace with your actual bot token
DISCORD_TOKEN=your_discord_bot_token_here

# SQLite database path
DB_PATH=./gophermon.db

# Optional: Bot prefix (not used for slash commands)
BOT_PREFIX=!

# Optional: Guild ID for faster command registration during development
GUILD_ID=549642809574162458

# Optional: Event system configuration
# Channel ID where event announcements will be sent (leave empty to disable announcements)
EVENT_ANNOUNCE_CHANNEL=

# Enable/disable automatic event scheduling (true/false, default: true)
AUTO_EVENTS_ENABLED=true

# Hours between automatic events (default: 48)
AUTO_EVENT_INTERVAL=48

# Hours each automatic event lasts (default: 24)
AUTO_EVENT_DURATION=24

